<mvc:View controllerName="vicenterj.grandesprojetos.zov.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:t="sap.ui.table"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <Button id="idButton" text="clique no botÃ£o." press="_onPress" />

        <VBox id="idVbox" class="sapUiTinyMargin">
            <Label id="_IDGenLabel" text="Id do Cliente"/>
            <Input id="_IDGenInput" />
        </VBox>

        <t:Table id="table1"
            rows="{/OVCabSet}"
            visibleRowCount="10"
            threshold="10"
            class="sapUiTinyMargin"
            selectionMode="MultiToggle">
            <t:toolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar">
                    <Title id="title" text="Ordens"></Title>
                </OverflowToolbar>
            </t:toolbar>
            <t:columns>
                <t:Column id="_IDGenColumn" width="4rem" sortProperty="OrdemId">
                    <Label id="_IDGenLabel1" text="OrdemId" />
                    <t:template>
                        <Text id="_IDGenText" text="{OrdemId}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column id="_IDGenColumn2" width="10rem" sortProperty="ClienteId" filterProperty="ClienteId" autoResizable="true">
                    <Label id="_IDGenLabel2" text="Id do cliente" />
                    <t:template>
                        <Text id="_IDGenText1" text="{ClienteId}" wrapping="false" />
                    </t:template>
                </t:Column>
                <t:Column id="_IDGenColumn3" width="10rem" sortProperty="TotalItens" filterProperty="TotalItens" autoResizable="true">
                    <Label id="_IDGenLabel3" text="Total Itens" />
                    <t:template>
                        <Text id="_IDGenText2" text="{TotalItens}" wrapping="false" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
        
    </Page>
</mvc:View>
